<Window x:Class="QueryClipboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Query Clipboard"
        Height="720"
        Width="1060"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Deactivated="Window_Deactivated">

    <Border Background="{StaticResource BgBrush}"
            CornerRadius="12"
            Margin="12">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.25" Color="#333"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header com gradiente -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                        <GradientStop Color="{StaticResource AccentColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource AccentDarkColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Height="56" Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Query Clipboard"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Foreground="White"/>
                        <TextBlock x:Name="HotkeyHintText"
                                   Text="Ctrl+Alt+Q para abrir"
                                   FontSize="11"
                                   FontFamily="Segoe UI"
                                   Foreground="#CCFFFFFF"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                               Orientation="Horizontal"
                               VerticalAlignment="Center">
                        <Button Content="&#x2699;"
                                Style="{StaticResource HeaderIconButtonStyle}"
                                Margin="0,0,6,0"
                                Click="SettingsButton_Click"
                                ToolTip="Configuracoes"/>
                        <Button Content="&#x2715;"
                                Style="{StaticResource HeaderIconButtonStyle}"
                                Click="CloseButton_Click"
                                ToolTip="Fechar (ESC)"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Search Box -->
            <Border Grid.Row="1"
                    Margin="16,14,16,8"
                    Background="White"
                    CornerRadius="10"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Padding="14,9">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="&#x1F50D;"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               Opacity="0.5"/>

                    <TextBox Grid.Column="1"
                             x:Name="SearchTextBox"
                             FontSize="13"
                             FontFamily="Segoe UI"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             VerticalAlignment="Center"
                             TextChanged="SearchTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Buscar queries..."
                                                                   Foreground="{StaticResource MutedBrush}"
                                                                   FontSize="13"
                                                                   FontFamily="Segoe UI"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Border>

            <!-- Categories -->
            <ScrollViewer Grid.Row="2"
                         HorizontalScrollBarVisibility="Hidden"
                         VerticalScrollBarVisibility="Disabled"
                         Margin="16,0,16,8">
                <StackPanel x:Name="CategoriesPanel"
                           Orientation="Horizontal"/>
            </ScrollViewer>

            <!-- Queries List (grid de cards) -->
            <ScrollViewer Grid.Row="3"
                         Margin="16,0,16,0"
                         Style="{StaticResource SlimScrollViewer}"
                         VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="QueriesPanel" Orientation="Horizontal"/>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="4"
                    Background="{StaticResource FooterBrush}"
                    CornerRadius="0,0,12,12"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{StaticResource BorderBrush}"
                    Padding="16,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               x:Name="StatusTextBlock"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondaryBrush}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Importar"
                                Click="ImportButton_Click"
                                Style="{StaticResource GhostButtonStyle}"
                                Margin="0,0,8,0"
                                ToolTip="Importar queries de arquivo JSON"/>

                        <Button Content="Exportar"
                                Click="ExportButton_Click"
                                Style="{StaticResource GhostButtonStyle}"
                                Margin="0,0,8,0"
                                ToolTip="Exportar queries para arquivo JSON"/>

                        <Button Content="+ Nova Query"
                                Click="NewQueryButton_Click"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
